{% extends "base.jinja2" %}

{% block title %}{{ type }} {{ id_trunc }} - Haruka's Aleo Explorer{% endblock %}

{% block head %}

    <style>

        #data {
            margin: 20px 4px;
        }

    </style>

{% endblock %}

{% block content %}

    <div class="content">
        <div class="header">
            <h3>{{ type }} {{ id_trunc }}</h3>
        </div>

        <div id="data">
            <data-line>
                <span slot="title">{{ type }}</span>
                <span slot="content"><span class="mono">{{ id }}</span></span>
            </data-line>
        {% for title, content in data.items() %}
            {% if content is mapping %}
            <data-line>
                <span slot="title">{{ title }}</span>
            </data-line>
            {% for sub_title, sub_content in content.items() %}
                <sub-data-line>
                    <span slot="title">{{ sub_title }}</span>
                    <span slot="content"><span class="mono">{{ sub_content | safe }}</span></span>
                </sub-data-line>
            {% endfor %}
            {% else %}
            <data-line>
                <span slot="title">{{ title }}</span>
                <span slot="content"><span class="mono">{{ content | safe }}</span></span>
            </data-line>
            {% endif %}
        {% endfor %}
        </div>

    </div>

{% endblock %}
{% extends "base.jinja2" %}

{% block title %}Blocks - Haruka's Aleo Explorer{% endblock %}

{% block head %}
    <style>

    </style>
{% endblock %}

{% block content %}

    <div class="content">

        <div id="header">
            <h3>Blocks</h3>
        </div>

        <div id="blocks">

            <nav>
                <ul class="pagination">
                    <li class="pagination-previous{% if page == 1 %} disabled{% endif %}">{% if page != 1 %}<a href="/blocks?p={{ page - 1 }}"></a>{% endif %}</li>
                    {% for p in range(1, ([total_pages, 4] | min)) %}
                        <li{% if p == page %} class="current"{% endif %}>{% if p != page %}<a href="/blocks?p={{ p }}">{% endif %}{{ p }}{% if p != page %}</a>{% endif %}</li>
                    {% endfor %}
                    {% if page > 7 %}
                        <li class="ellipsis" aria-hidden="true"></li>
                    {% endif %}
                    {% for p in range(([4, page - 3] | max), page) %}
                        <li><a href="/blocks?p={{ p }}">{{ p }}</a></li>
                    {% endfor %}
                    {% if page > 3 or page == total_pages %}
                        <li class="current">{{ page }}</li>
                    {% endif %}
                    {% for p in range([4, page + 1] | max, [page + 4, total_pages] | min) %}
                        <li><a href="/blocks?p={{ p }}">{{ p }}</a></li>
                    {% endfor %}
                    {% if page < total_pages - 4 %}
                        <li class="ellipsis" aria-hidden="true"></li>
                    {% endif %}
                    {% if page < total_pages %}
                        <li><a href="/blocks?p={{ total_pages }}">{{ total_pages }}</a></li>
                    {% endif %}
                    <li class="pagination-next{% if page == total_pages %} disabled{% endif %}">{% if page != total_pages %}<a href="/blocks?p={{ page + 1 }}"></a>{% endif %}</li>
                </ul>
            </nav>

            <table class="unstriped">
                <thead>
                <tr>
                    <th>Height</th>
                    <th>Epoch</th>
                    <th>Timestamp</th>
                    <th>Transactions</th>
                    <th>Proof target</th>
                    <th>Coinbase target</th>
                    <th>Coinbase rewards</th>
                    <th>Coinbase solutions</th>
                    <th>Validator</th>
                </tr>
                </thead>
                <tbody>
                {% for block in blocks %}
                    <tr>
                        <td><a href="/block?h={{ block.height }}">{{ block.height }}</a></td>
                        <td>{{ block.height // 256 }}</td>
                        <td>{{ block.timestamp | format_time | safe }}</td>
                        <td>{{ block.transaction_count }}</td>
                        <td>{{ block.proof_target }}</td>
                        <td>{{ block.coinbase_target }}</td>
                        <td>{% if block.coinbase_reward %}{{ ((block.coinbase_reward | int) // 2) | format_aleo_credit }}{% else %}-{% endif %}</td>
                        <td>{% if block.coinbase_reward %}{{ block.partial_solution_count }}{% else %}-{% endif %}</td>
                        <td>-</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
{% extends "base.jinja2" %}

{% block title %}Program Registry - Haruka's Aleo Explorer{% endblock %}

{% block head %}
    <style>

    </style>
{% endblock %}

{% from "macros.jinja2" import nav %}

{% block content %}

    <div class="content">

        <div id="header">
            <h3>Program Registry</h3>
            {% if no_helloworld %}
                <p>Showing all programs except the "Hello World", workshop programs and similar programs. <a href="/programs">Show all programs</a></p>
            {% else %}
                <p>Showing all programs, including the "Hello World", workshop programs and similar programs. <a href="/programs?no_helloworld=1">Don't show "Hello World" programs</a></p>
            {% endif %}
        </div>

        <div id="blocks">

            {% if no_helloworld %}
                {% set nav_path = "/programs?no_helloworld=1&" %}
            {% else %}
                {% set nav_path = "/programs?" %}
            {% endif %}

            {{ nav(page, total_pages, nav_path) }}

            <table class="unstriped">
                <thead>
                <tr>
                    <th>Program ID</th>
                    <th>Block Height</th>
                    <th>Transaction ID</th>
                    <th>Times called</th>
                </tr>
                </thead>
                <tbody>
                {% for program in programs %}
                    <tr>
                        <td><span class="mono"><a href="/program?id={{ program.program_id }}">{{ program.program_id }}</a></span></td>
                        <td><a href="/block?h={{ program.height }}">{{ program.height }}</a></td>
                        <td><span class="mono"><a href="/transaction?id={{ program.transaction_id }}">{{ program.transaction_id }}</a></span></td>
                        <td>{{ program.called }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {{ nav(page, total_pages, nav_path) }}

        </div>
    </div>

{% endblock %}
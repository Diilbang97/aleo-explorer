{% extends "base.jinja2" %}

{% block title %}Solutions from {{ address_trunc }} - Haruka's Aleo Explorer{% endblock %}

{% block head %}
    <style>

        .note {
            font-size: 0.75rem;
            color: #999;
        }

    </style>
{% endblock %}

{% block content %}

    <div class="content">

        <div id="header">
            <h3>Solutions from {{ address_trunc }}</h3>
        </div>

        <div id="blocks">

            <nav>
                <ul class="pagination">
                    <li class="pagination-previous{% if page == 1 %} disabled{% endif %}">{% if page != 1 %}<a href="/address_solution?a={{ address }}&p={{ page - 1 }}"></a>{% endif %}</li>
                    {% for p in range(1, ([total_pages, 4] | min)) %}
                        <li{% if p == page %} class="current"{% endif %}>{% if p != page %}<a href="/address_solution?a={{ address }}&p={{ p }}">{% endif %}{{ p }}{% if p != page %}</a>{% endif %}</li>
                    {% endfor %}
                    {% if page > 7 %}
                        <li class="ellipsis" aria-hidden="true"></li>
                    {% endif %}
                    {% for p in range(([4, page - 3] | max), page) %}
                        <li><a href="/address_solution?a={{ address }}&p={{ p }}">{{ p }}</a></li>
                    {% endfor %}
                    {% if page > 3 or page == total_pages %}
                        <li class="current">{{ page }}</li>
                    {% endif %}
                    {% for p in range([4, page + 1] | max, [page + 4, total_pages] | min) %}
                        <li><a href="/address_solution?a={{ address }}&p={{ p }}">{{ p }}</a></li>
                    {% endfor %}
                    {% if page < total_pages - 4 %}
                        <li class="ellipsis" aria-hidden="true"></li>
                    {% endif %}
                    {% if page < total_pages %}
                        <li><a href="/address_solution?a={{ address }}&p={{ total_pages }}">{{ total_pages }}</a></li>
                    {% endif %}
                    <li class="pagination-next{% if page == total_pages %} disabled{% endif %}">{% if page != total_pages %}<a href="/address_solution?a={{ address }}&p={{ page + 1 }}"></a>{% endif %}</li>
                </ul>
            </nav>

            <table class="unstriped">
                <thead>
                <tr>
                    <th>Block</th>
                    <th>Epoch</th>
                    <th>Timestamp</th>
                    <th>Nonce</th>
                    <th>Target / Total</th>
                    <th>Reward</th>
                </tr>
                </thead>
                <tbody>
                {% for solution in solutions %}
                    <tr>
                        <td><a href="/block?h={{ solution.height }}">{{ solution.height }}</a></td>
                        <td>{{ solution.height // 256 }}</td>
                        <td>{{ solution.timestamp | format_time | safe }}</td>
                        <td>{{ solution.nonce }}</td>
                        <td>{{ solution.target }}<span class="note"> / {{ solution.target_sum }}</span></td>
                        <td>{{ solution.reward | format_aleo_credit }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
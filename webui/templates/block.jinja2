{% extends "base.jinja2" %}

{% block title %}Block {{ block.header.metadata.height }} - Haruka's Aleo Explorer{% endblock %}

{% block head %}
    <style>

        #data {
            margin: 20px 4px;
        }

        .data-line {
            padding: 10px 0;
            border-bottom: 1px solid #ccc;
        }

        .data-line-value {
            overflow-wrap: break-word;
        }

        .tooltip {
            max-width: 250px;
        }

        .text-alert {
            color: #cc4b37;
        }

    </style>
{% endblock %}

{% block content %}

    <div class="content">

        <div id="header">
            <h3>Block {{ block.header.metadata.height }}</h3>
        </div>

        {% if testnet2_bug %}
            <div class="callout warning">
                <p>This block is affected by <a href="https://github.com/AleoHQ/snarkOS/issues/1800">a snarkOS bug.</a>
                </p>
                <p><em>If you are the miner:</em> You should restart your operator / miner node to clear the mempool.
                </p>
            </div>
        {% endif %}

        <div id="data">
            <!-- Keeping this verbose but need a way to simplify it -->
            <div class="data-line grid-x grid-padding-x">
                <div class="cell small-3 block-data-line-label">
                    Timestamp
                </div>
                <div class="cell auto data-line-value">
                    {{ block.header.metadata.timestamp }}
                </div>
            </div>
            <div class="data-line grid-x grid-padding-x">
                <div class="cell small-3 block-data-line-label">
                    Confirmations
                </div>
                <div class="cell auto data-line-value">
                    {% if is_canonical %}
                        {{ confirmations }}
                    {% else %}
                        <span class="text-alert">Orphaned</span>
                    {% endif %}
                </div>
            </div>
            <div class="data-line grid-x grid-padding-x">
                <div class="cell small-3 block-data-line-label">
                    Difficulty target
                </div>
                <div class="cell auto data-line-value">
                    {{ block.header.metadata.difficulty_target }}
                </div>
            </div>
            <div class="data-line grid-x grid-padding-x">
                <div class="cell small-3 block-data-line-label">
                    Cumulative weight
                </div>
                <div class="cell auto data-line-value">
                    {{ block.header.metadata.cumulative_weight }}
                </div>
            </div>
            <div class="data-line grid-x grid-padding-x">
                <div class="cell small-3 block-data-line-label">
                    Miner
                </div>
                <div class="cell auto data-line-value">
                    <a href="/address?a={{ owner }}"><span class="mono">{{ owner }}</span></a>
                </div>
            </div>
            <div class="data-line grid-x grid-padding-x">
                <div class="cell small-3 block-data-line-label">
                    Mining reward
                </div>
                <div class="cell auto data-line-value">
                    {{ mining_reward }} Aleo Credits
                </div>
            </div>
            <div class="data-line grid-x grid-padding-x">
                <div class="cell small-3 block-data-line-label">
                    Block hash
                </div>
                <div class="cell auto data-line-value">
                    <span class="mono">{{ block.block_hash }}</span>
                </div>
            </div>
            <div class="data-line grid-x grid-padding-x">
                <div class="cell small-3 block-data-line-label">
                    Transactions root
                </div>
                <div class="cell auto data-line-value">
                    <span class="mono">{{ block.header.transactions_root }}</span>
                </div>
            </div>
            <div class="data-line grid-x grid-padding-x">
                <div class="cell small-3 block-data-line-label">
                    Ledger root
                </div>
                <div class="cell auto data-line-value">
                    {% if ledger_root %}
                        <span class="mono">{{ ledger_root }}</span>
                    {% else %}
                        Unknown&nbsp;<span data-tooltip
                                           title="This explorer is not actively calculating the ledger root for every possible block due to various reasons.">?</span>
                    {% endif %}
                </div>
            </div>
            <div class="data-line grid-x grid-padding-x">
                <div class="cell small-3 block-data-line-label">
                    Previous block hash
                </div>
                <div class="cell auto data-line-value">
                    <a href="/block?bh={{ block.previous_block_hash }}"><span
                            class="mono">{{ block.previous_block_hash }}</span></a>
                </div>
            </div>
            <div class="data-line grid-x grid-padding-x">
                <div class="cell small-3 block-data-line-label">
                    Previous ledger root
                </div>
                <div class="cell auto data-line-value">
                    <span class="mono">{{ block.header.previous_ledger_root }}</span>
                </div>
            </div>
            <div class="data-line grid-x grid-padding-x">
                <div class="cell small-3 block-data-line-label">
                    Nonce
                </div>
                <div class="cell auto data-line-value">
                    <span class="mono">{{ block.header.nonce }}</span>
                </div>
            </div>
            <div class="data-line grid-x grid-padding-x">
                <div class="cell small-3 block-data-line-label">
                    Proof
                </div>
                <div class="cell auto data-line-value">
                    <span class="mono">{{ block.header.proof }}</span>
                </div>
            </div>
        </div>

        <div id="transactions">
            <h4>Transactions</h4>
            <table id="transactions-table" class="unstriped">
                <thead>
                <tr>
                    <td>Transaction ID</td>
                    <td>Transitions</td>
                    <td>Value balance</td>
                </tr>
                </thead>
                <tbody>
                {% for tx in transactions %}
                    <tr>
                        <td class="mono"><a href="/transaction?id={{ tx.tx_id }}">{{ tx.tx_id }}</a></td>
                        <td>{{ tx.transitions }}</td>
                        <td>{{ "%.6f" % tx.balance }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>

{% endblock %}